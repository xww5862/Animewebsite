    <select id="getIndexRecommendVideo" resultMap="videoresultplus">
        SELECT a.* FROM t_video a, t_predict b
        WHERE a.video_state_id = 4 AND a.video_id = b.video_id
        ORDER BY b.pre_star DESC
            LIMIT 4;
    </select>
    <select id="getIndexLastVideo" resultMap="videoresultplus">
